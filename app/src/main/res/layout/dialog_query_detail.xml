<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/toolbar_bg_color">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:paddingBottom="30dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="6dp"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".2"
                app:strokeWidth=".1dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_white"
                    android:padding="10dp"
                    android:src="@drawable/ic_kundli_logo" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/label1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_kids_label_1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Kids Kundali Details"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_container"
                app:layout_constraintWidth_percent=".9" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#0FCE13ED"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@id/label_name"
                app:layout_constraintEnd_toEndOf="@id/label1"
                app:layout_constraintStart_toStartOf="@id/label1"
                app:layout_constraintTop_toTopOf="@id/label_name"
                app:strokeWidth="0dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#0FCE13ED"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@id/label_m_name"
                app:layout_constraintEnd_toEndOf="@id/label1"
                app:layout_constraintStart_toStartOf="@id/label1"
                app:layout_constraintTop_toTopOf="@id/label_m_name"
                app:strokeWidth="0dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#0FCE13ED"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@id/label_dob"
                app:layout_constraintEnd_toEndOf="@id/label1"
                app:layout_constraintStart_toStartOf="@id/label1"
                app:layout_constraintTop_toTopOf="@id/label_dob"
                app:strokeWidth="0dp" />

            <TextView
                android:id="@+id/label_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="10dp"
                android:text="Fullname"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/name"
                app:layout_constraintStart_toStartOf="@id/label1"
                app:layout_constraintTop_toBottomOf="@id/label1" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Abhay"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/label1"
                app:layout_constraintStart_toEndOf="@id/label_name"
                app:layout_constraintTop_toTopOf="@id/label_name" />

            <TextView
                android:id="@+id/label_f_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="10dp"
                android:text="Father's Name"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/name"
                app:layout_constraintStart_toStartOf="@id/label1"
                app:layout_constraintTop_toBottomOf="@id/label_name" />

            <TextView
                android:id="@+id/f_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Rajesh"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/label1"
                app:layout_constraintStart_toEndOf="@id/label_f_name"
                app:layout_constraintTop_toTopOf="@id/label_f_name" />

            <TextView
                android:id="@+id/label_m_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="10dp"
                android:text="Mother's Name"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/name"
                app:layout_constraintStart_toStartOf="@id/label1"
                app:layout_constraintTop_toBottomOf="@id/label_f_name" />

            <TextView
                android:id="@+id/m_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Rashmi"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/label1"
                app:layout_constraintStart_toEndOf="@id/label_m_name"
                app:layout_constraintTop_toTopOf="@id/label_m_name" />

            <TextView
                android:id="@+id/label_tob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="10dp"
                android:text="Time of birth"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/name"
                app:layout_constraintStart_toStartOf="@id/label1"
                app:layout_constraintTop_toBottomOf="@id/label_m_name" />

            <TextView
                android:id="@+id/tob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="12:32 AM"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/label1"
                app:layout_constraintStart_toEndOf="@id/label_f_name"
                app:layout_constraintTop_toTopOf="@id/label_tob" />

            <TextView
                android:id="@+id/label_dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="10dp"
                android:text="Date of birth"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/name"
                app:layout_constraintStart_toStartOf="@id/label1"
                app:layout_constraintTop_toBottomOf="@id/label_tob" />

            <TextView
                android:id="@+id/dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="12/11/2000"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/label1"
                app:layout_constraintStart_toEndOf="@id/label_f_name"
                app:layout_constraintTop_toTopOf="@id/label_dob" />

            <TextView
                android:id="@+id/label_pob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="10dp"
                android:text="Place of birth"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/name"
                app:layout_constraintStart_toStartOf="@id/label1"
                app:layout_constraintTop_toBottomOf="@id/label_dob" />

            <TextView
                android:id="@+id/pob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Jaipur"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/label1"
                app:layout_constraintStart_toEndOf="@id/label_f_name"
                app:layout_constraintTop_toTopOf="@id/label_pob" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/later"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:text="Later"
                android:textColor="@color/toolbar_bg_color"
                app:layout_constraintEnd_toStartOf="@id/name"
                app:layout_constraintStart_toStartOf="@id/label1"
                app:layout_constraintTop_toBottomOf="@id/label_pob"
                app:strokeColor="@color/toolbar_bg_color"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/toolbar_bg_color"
                android:padding="10dp"
                android:text="Continue"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/label1"
                app:layout_constraintStart_toEndOf="@id/label_f_name"
                app:layout_constraintTop_toTopOf="@id/later" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>